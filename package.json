{
  "name": "art-inspiration-backend",
  "version": "0.0.1",
  "description": "艺启心扉后端",
  "author": "floatDreamer",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm prisma:generate && nest build",
    "build:swc": "nest build -b swc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nest start -b swc -w",
    "start": "cross-env NODE_ENV=development nest start",
    "start:swc": "cross-env NODE_ENV=development nest start -b swc",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:dev:swc": "cross-env NODE_ENV=development nest start -b swc -w",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "restart:prod": "pm2 restart main --env production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "cross-env NODE_ENV=development prisma migrate dev",
    "prisma:migrate:deploy": "cross-env NODE_ENV=production prisma migrate deploy",
    "prisma:db:push": "cross-env NODE_ENV=development prisma db push"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
  "dependencies": {
    "@ai-sdk/cohere": "^1.2.10",
    "@ai-sdk/openai": "^1.3.23",
    "@mastra/core": "0.9.4",
    "@mastra/fastembed": "^0.0.3",
    "@mastra/libsql": "0.0.4",
    "@mastra/memory": "0.3.4",
    "@mastra/pg": "^0.3.4",
    "@mastra/rag": "^0.1.23",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.11.1",
    "@types/nodemailer": "^6.4.17",
    "ai": "^4.3.17",
    "axios": "^1.10.0",
    "cos-nodejs-sdk-v5": "^2.15.1",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "ioredis": "^5.6.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.11.1",
    "qwen-ai-provider": "^0.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.12.11",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.16.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "typescript-eslint": "^8.36.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
